<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>AdsServlet</servlet-name>
        <servlet-class>AdsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdsServlet</servlet-name>
        <url-pattern>/Ads</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogInServlet</servlet-name>
        <servlet-class>LogInServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogInServlet</servlet-name>
        <url-pattern>/LogIn</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>NewAdServlet</servlet-name>
        <servlet-class>NewAdServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewAdServlet</servlet-name>
        <url-pattern>/New</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>LogOutServlet</servlet-name>
        <servlet-class>LogOutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogOutServlet</servlet-name>
        <url-pattern>/LogOut</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AccountManagerServlet</servlet-name>
        <servlet-class>AccountManagerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AccountManagerServlet</servlet-name>
        <url-pattern>/AccountManager</url-pattern>
    </servlet-mapping>
    
</web-app>
